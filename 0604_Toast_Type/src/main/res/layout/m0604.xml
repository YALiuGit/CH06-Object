<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:drawable/btn_default"
    android:orientation="vertical"
    android:padding="@dimen/p10"
    tools:context=".M0604">

    <Button
        android:id="@+id/m0604_b001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/m0604_b001"
        android:textSize="@dimen/fontsize" />

    <Button
        android:id="@+id/m0604_b002"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/m0604_b002"
        android:textSize="@dimen/fontsize" />

    <Button
        android:id="@+id/m0604_b003"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/m0604_b003"
        android:textSize="@dimen/fontsize" />

    <Button
        android:id="@+id/m0604_b004"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/m0604_b004"
        android:textSize="@dimen/fontsize" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/myname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/myname"
            android:textColor="@color/Yellow"
            android:textSize="@dimen/fontsize"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>