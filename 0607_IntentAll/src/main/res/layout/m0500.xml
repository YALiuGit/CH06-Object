<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Silver"
    android:orientation="vertical"
    android:padding="@dimen/pa01">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/m0500_t001"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/m0500_t001"
            android:textColor="@color/Aqua"
            android:textSize="@dimen/fontsize"
            tools:ignore="TextContrastCheck" />

        <EditText
            android:id="@+id/m0500_e001"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/White"
            android:ems="10"
            android:gravity="end"
            android:hint="@string/hint"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            android:text="@string/zero0500"
            android:textColor="@color/Navy"
            android:textColorHint="@color/Navy"
            android:textSize="@dimen/fontsize"
            tools:ignore="TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />
    </TableRow>

    <Button
        android:id="@+id/m0500_b001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/Yellow"
        android:backgroundTintMode="add"
        android:text="@string/m0500_b001"
        android:textColor="@color/Red"
        android:textSize="@dimen/fontsize"
        android:textStyle="bold" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/m0500_t002"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/m0500_t002"
            android:textColor="@color/Aqua"
            android:textSize="@dimen/fontsize"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/m0500_t003"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Gray"
            android:gravity="end"
            android:labelFor="@id/m0500_t003"
            android:text="@string/zero0500"
            android:textSize="24sp"
            tools:ignore="TextContrastCheck" />


<!--                <TextView-->
<!--                    android:id="@+id/m0500_t003"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginTop="30dp"-->
<!--                    android:background="@color/Gray"-->
<!--                    android:gravity="end"-->
<!--                    android:text="@string/zero"-->
<!--                    android:textSize="@dimen/fontsize" />-->
    </TableRow>

    <TextView
        android:id="@+id/m0500_t004"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="end"
        android:text="@string/myname"
        android:textSize="@dimen/fontsize" />

</LinearLayout>